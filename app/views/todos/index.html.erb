<h1>Todas las tareas</h1>
<% @todos.each_slice(4) do |todo2|%>
<div class="card-deck">
    <% todo2.each do |todo|%>

    <div class="card">
      
      <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text">  <%= todo.description%> </p>
        <h5 class="card-title">Estado</h5>
        <% if todo.completed == true %>
        <%=link_to "Completada" , complete_todo_path(todo),class:'btn btn-outline-success m-1' %>
        <% else %>
        <%=link_to "Incompleta", complete_todo_path(todo),class: 'btn btn-outline-warning m-1' %>
      <%end%>
        <p class="card-text">  <%= todo.completed%> </p>
        <%=link_to "Editar", edit_todo_path(todo), class:'btn btn-outline-primary m-1'%>
        <%=link_to "Ver", show_todo_path(todo), class: 'btn btn-outline-info'%><br>
      <%=link_to "Eliminar", delete_todo_path(todo), class:'btn btn-outline-danger m-1', method: :delete, data:{confirm: 'Estas seguro?'}%>

      </div>
    </div>
<%end%>
</div>
<%end%> 
